<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainView">

<!--    添加新事务按钮-->


    <!--装饰的横线-->

    <!--    主页背景图片-->

    <!--每日句子-->

    <!--日期号-->

    <!--年月-->


    <ImageView
        android:id="@+id/hengxian"
        android:layout_width="377dp"
        android:layout_height="78dp"
        android:layout_marginTop="436dp"
        android:src="@drawable/hengxian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="355dp"
        android:layout_height="355dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/zhutu_shape"
        app:layout_constraintBottom_toTopOf="@+id/hengxian"
        app:layout_constraintCircleRadius="15px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/daySentence"
        android:layout_width="334dp"
        android:layout_height="28dp"
        android:layout_marginTop="448dp"
        android:fontFamily="serif"
        android:text="人间总是混沌局，谁也不多余，谁也不必须."
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/zhutu_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="12"
        android:textColor="#FBFAFA"
        android:textSize="110sp"
        app:layout_constraintBottom_toBottomOf="@+id/mainImage"
        app:layout_constraintEnd_toEndOf="@+id/mainImage"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="@+id/mainImage"
        app:layout_constraintTop_toTopOf="@+id/mainImage"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/zhutu_yam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="2022年5月"
        android:textColor="#FAF8F8"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mainImage"
        app:layout_constraintEnd_toEndOf="@+id/mainImage"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="@+id/mainImage"
        app:layout_constraintTop_toTopOf="@+id/mainImage"
        app:layout_constraintVertical_bias="0.421" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/buttom" />


</androidx.constraintlayout.widget.ConstraintLayout>

