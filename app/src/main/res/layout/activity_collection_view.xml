<!--    暂时用于替代地图显示的图片-->
    <ImageView
        android:id="@+id/map"
        android:layout_width="361dp"
        android:layout_height="442dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPlace"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/map" />

    <!--坐标选点提示-->

    <ImageView
        android:id="@+id/wenzi3"
        android:layout_width="106dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPlace"
        app:layout_constraintVertical_bias="0.83"
        app:srcCompat="@drawable/wenzi3" />

    <ImageView
        android:id="@+id/wenzi2"
        android:layout_width="370dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPlace"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/wenzi2" />

    <Button
        android:id="@+id/button0"
        style="@android:style/Widget.Button"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape"
        android:text="五食堂"
        android:textAlignment="center"
        android:textColor="#ACA7A7"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wenzi2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPlace"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/button1"
        style="@android:style/Widget.Button"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape"
        android:text="蜜雪冰城"
        android:textAlignment="center"
        android:textColor="#ACA7A7"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wenzi2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/searchPlace"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Button"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape"
        android:text="西山操场"
        android:textAlignment="center"
        android:textColor="#ACA7A7"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wenzi2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/searchPlace"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Button"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape"
        android:text="四食堂"
        android:textAlignment="center"
        android:textColor="#ACA7A7"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wenzi2"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button0"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Button"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape"
        android:text="宿舍C区"
        android:textAlignment="center"
        android:textColor="#ACA7A7"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wenzi2"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Button"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape"
        android:text="西山浴室"
        android:textAlignment="center"
        android:textColor="#ACA7A7"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wenzi2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toEndOf="@+id/wenzi3"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>