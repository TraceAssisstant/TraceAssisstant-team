<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TraceAssistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">#27A7BD</item>
        <item name="colorPrimaryVariant">#00FFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#0974BA</item>
        <item name="colorSecondaryVariant">#0D8488</item>
        <item name="colorOnSecondary">#A6ECE1</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_500</item>

        <item name="materialCalendarTheme">@style/ThemeOverlay.TraceAssisstant.DatePicker</item>

        <item name="materialThemeOverlay">@style/ThemeOverlay.TraceAssisstant.Chip.Choice</item>
    </style>
    
    <style name="ThemeOverlay.TraceAssisstant.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">#27A7BD</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.TraceAssisstant.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>
</resources>